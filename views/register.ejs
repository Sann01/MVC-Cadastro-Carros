                <div class="mb-3" class="input">
                    <label for="exampleInputPassword1" class="form-label">Senha</label>
                    <input name="senha" type="password" class="form-control" placeholder="Senha:" class="inp-register"
                        required>
                </div>

                <div class="mb-3" class="input">
                    <label for="exampleInputPassword1" class="form-label">Confirmar Senha</label>
                    <input name="confirmSenha" type="password" class="form-control" placeholder="Senha:"
                        class="inp-register" required>
                </div>

                <div id="botao-cadastro"> 
                    <div class="botao">
                        <button type="submit" class="btn">Cadastrar</button>
                    </div>
                    
                    <p>JÃ¡ tem uma conta?<a href="/login" style="text-decoration: none;">Entrar</a></p>
                </div>

